@model System.Tuple<string, string[], string[]>

@{
    if (Model != null)
    {
        var title = Model.Item1;
        var breadcrumbs = string.Empty;
        var linkCount = Model.Item3?.Count();

        if (Model.Item2 != null && Model.Item2.Count() > 0)
        {
            breadcrumbs = string.Join(" > ", Model.Item2.Select((str, i) => Model.Item3 != null && linkCount > i 
            ? string.Format("<a href='{1}' title='{0}'>{0}</a>", Model.Item2[i], Model.Item3[i])
            : string.Format("<span>{0}</span>", Model.Item2[i])));

            breadcrumbs += string.Format(" > <span>{0}</span>", title);
        }

        <h3>@title</h3>
        <span>@Html.Raw(breadcrumbs)</span>
        <hr />
    }
}
