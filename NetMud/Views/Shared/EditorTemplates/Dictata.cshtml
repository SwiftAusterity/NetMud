@using NetMud.Data.Linguistic

@model Dictata

<h4>Details</h4>
<div class="form-group row">
    @if (Model.ApprovedBy != null)
    {
        @Html.EditorFor(m => m.Name, new { disabled = true })
        @Html.EditorFor(m => m.Language, new { validItems = ViewData["ValidLanguages"] })
        @Html.EditorFor(m => m.WordType)
    }
    else
    {
        @Html.EditorFor(m => m.Name)
        @Html.EditorFor(m => m.Language, new { validItems = ViewData["ValidLanguages"] })
        @Html.EditorFor(m => m.WordType)
    }
    @Html.EditorFor(m => m.Tense)
    @Html.EditorFor(m => m.Perspective)
</div>
<div class="form-group row">
    @Html.EditorFor(m => m.Severity)
    @Html.EditorFor(m => m.Elegance)
    @Html.EditorFor(m => m.Quality)
</div>
<div class="form-group row">
    @Html.EditorFor(m => m.Positional)
    @Html.EditorFor(m => m.Determinant)
    @Html.EditorFor(m => m.Possessive)
    @Html.EditorFor(m => m.Plural)
    @Html.EditorFor(m => m.Feminine)
</div>

<h4>Synonyms</h4>
@Html.EditorFor(m => m.Synonyms, new { validItems = ViewData["ValidWords"] })

<h4>Antonyms</h4>
@Html.EditorFor(m => m.Antonyms, new { validItems = ViewData["ValidWords"] })