@using NetMud.Models
@using NetMud.Data.Gaias
@using NetMud.DataStructure.Gaia

@model HashSet<ICelestial>

@{
    //Add a blank one in
    if (Model.Count() == 0)
    {
        Model.Add(new Celestial() { Id = -1 });
    }

    var currentCount = Model.Count();
    var rowsName = ViewData.ModelMetadata.PropertyName + "Rows";
}

<div id="@rowsName" class="iterativeContainer">
    <div class="addRowContainer">
        <div class="col-sm-1">
            @Html.DescriptionFor(m => m)
            <a href="#" class="addRow btn" onclick="javascript:  $('#@rowsName').append(newDropdown); return false;"><span class="addWord">Add Row</span></a>
        </div>
    </div>
    @Html.EditorForMany(e => e, null, 0, "CollectionCelestialListItem")
</div>

<script type="text/javascript">
    var newDropdown = decodeHtml('@Html.EmptyEditorForMany(e => e, null, currentCount, "CollectionCelestialListItem")');
</script>
