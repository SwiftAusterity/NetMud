@using NetMud.Models
@using NetMud.DataStructure.Inanimate

@model HashSet<IInanimateComponent>

@{
    var newRow = "<div class=\"form-group row\"><a href=\"#\" class=\"removeRow col-form-label\" title=\"Remove this\" onclick=\"javascript: $(this).parent().remove(); return false;\">X</a>"
                  + Html.EmptyEditorForMany(e => e, null, Model.Count(), "IInanimateComponent") + "</div>";
}

<div id="InanimateComponentRows" class="iterativeContainer">
    <div class="addRowContainer">
        <div class="col-sm-1">
            @Html.DescriptionFor(m => m)
            <a href="#" class="addRow btn" onclick="javascript: $(&#39;#InanimateComponentRows&#39;).append(decodeHtml(&#39;@newRow&#39;)); return false;"><span class="addWord">Add Row</span></a>
        </div>
    </div>
    <div class="form-group row">
        <a href="#" class="removeRow col-form-label" title="Remove this" onclick="javascript: $(this).parent().remove(); return false;">X</a>
        @Html.EditorForMany(e => e, null, 0, "IInanimateComponent")
    </div>
</div>