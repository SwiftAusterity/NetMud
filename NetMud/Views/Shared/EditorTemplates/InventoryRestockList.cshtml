@using NetMud.Models
@using NetMud.DataStructure.NPC

@model HashSet<MerchandiseStock>

@{
    var currentCount = Model.Count();
    var rowsName = ViewData.ModelMetadata.PropertyName + "Rows";
}

<div id="@rowsName" class="iterativeContainer">
    <div class="addRowContainer">
        <div class="col-sm-1">
            @Html.DescriptionFor(m => m)
            <a href="#" class="addRow btn" onclick="javascript: $('#@rowsName').append(newRestockRow); return false;"><span class="addWord">Add Row</span></a>
        </div>
    </div>
    <div class="form-group row">
        <a href="#" class="removeRow col-form-label" title="Remove this" onclick="javascript: $(this).parent().remove(); return false;">X</a>
        @Html.EditorForMany(e => e, new { validItems = ViewData["validItems"] }, 0, "RestockControl")
    </div>
</div>

<script type="text/javascript">
    var newRestockControl = decodeHtml('@Html.EmptyEditorForMany(e => e, new { validItems = ViewData["validItems"] }, currentCount, "RestockControl")');

    var newRestockRow = '<div class="form-group row">' +
        '<a href="#" class="removeRow col-form-label" title="Remove this" onclick="javascript: $(this).parent().remove(); return false;">X</a>' +
        newRestockControl + '</div>';
</script>