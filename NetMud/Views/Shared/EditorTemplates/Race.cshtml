@using NetMud.Data.Architectural.ActorBase

@model Race

<h4>Details</h4>
<div class="form-group row">
    @Html.EditorFor(m => m.Name)
    @Html.EditorFor(m => m.CollectiveNoun)
    @Html.EditorFor(m => m.StartingLocation, new { validItems = ViewData["ValidZones"] })
    @Html.EditorFor(m => m.EmergencyLocation, new { validItems = ViewData["ValidZones"] })
</div>

<div class="form-group row">
    @Html.EditorFor(m => m.HelpText)
</div>

<h4>Biology</h4>
<div class="form-group row">
    @Html.EditorFor(m => m.VisionRange)
    @Html.EditorFor(m => m.TemperatureTolerance)
    @Html.EditorFor(m => m.Breathes)
    @Html.EditorFor(m => m.DietaryNeeds)
    @Html.EditorFor(m => m.TeethType)
</div>

<h4>Anatomy</h4>
<div class="form-group row">
    @Html.EditorFor(m => m.SanguinaryMaterial, new { validItems = ViewData["ValidMaterials"] })
    @Html.EditorFor(m => m.Head, new { validItems = ViewData["ValidItems"] })
    @Html.EditorFor(m => m.Torso, new { validItems = ViewData["ValidItems"] })
    @Html.EditorFor(m => m.Arms, new { validItems = ViewData["ValidItems"] })
    @Html.EditorFor(m => m.Legs, new { validItems = ViewData["ValidItems"] })
</div>

<h4>Extra Body Parts</h4>
@Html.EditorFor(m => m.BodyParts, new { validItems = ViewData["ValidItems"] })

<h4>Death Config</h4>
<div class="form-group row">
    @Html.EditorFor(m => m.DeathNoticeBody)
</div>

<h4>On-Death Quality Changes</h4>
@Html.EditorFor(m => m.DeathQualityChanges)
