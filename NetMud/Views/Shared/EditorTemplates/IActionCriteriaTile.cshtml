@using NetMud.DataStructure.Action

@model IActionCriteria

@{
    var targetList = new Dictionary<string, string>();
    targetList.Add(ActionTarget.Tile.ToString(), ActionTarget.Tile.ToString());
}

<div class="form-group row">
    @Html.EditorFor(m => m.Target, new { validItems = targetList, selectedItem = ActionTarget.Tile })
    @Html.EditorFor(m => m.AffectsMemberId, "KeyedTemplateList", new { validItems = ViewData["ValidTileDatas"] })
    @Html.EditorFor(m => m.Quality)
    @Html.EditorFor(m => m.ValueRange)
</div>