@using NetMud.DataStructure.Action

@model IActionResult

@{ 
    var targetList = new Dictionary<string, string>();
    foreach (var name in Enum.GetNames(typeof(ActionTarget)))
    {
        targetList.Add(name, name);
    }
}

<div class="row">
    @Html.EditorFor(m => m.Target, new { validItems = targetList })
    @Html.EditorFor(m => m.Consumes)
    @Html.EditorFor(m => m.OccurrenceChanceGroupId)
    @Html.EditorFor(m => m.OccurrenceChanceRate)
</div>
<div class="row">
    @Html.EditorFor(m => m.Result, new { validItems = ViewData["ValidTileDatas"] })
    @Html.EditorFor(m => m.HealthDamage)
    @Html.EditorFor(m => m.StaminaDamage)
</div>
<div class="row">
    @Html.EditorFor(m => m.Quality)
    @Html.EditorFor(m => m.QualityValue)
    @Html.EditorFor(m => m.AdditiveQuality)
</div>
<div class="row">
    @Html.EditorFor(m => m.Produces, new { validItems = ViewData["ValidInanimateDatas"] })
    @Html.EditorFor(m => m.ProducesAmount)
    @Html.EditorFor(m => m.ProducesToInventory)
</div>