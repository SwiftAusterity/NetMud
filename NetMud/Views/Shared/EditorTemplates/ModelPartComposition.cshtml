@using NetMud.Data.Architectural.EntityBase

@model ModelPartComposition

@{
    var removeName = "remove" + ViewData.ModelMetadata.PropertyName + "Row";
}

<div class="form-group row">
    <a href="#" class="removeRow col-form-label" title="Remove this" onclick="javascript: $(this).parent().remove(); return false;">X</a>
    <div class="col-sm-8">
        @Html.EditorFor(m => m.PartName, new { columnCount = 2 })
        @Html.EditorFor(m => m.Material, new { columnCount = 2, validItems = ViewData["ValidMaterials"] })
    </div>
</div>