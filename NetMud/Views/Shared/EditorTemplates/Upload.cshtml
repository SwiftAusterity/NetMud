@model HttpPostedFileBase

@{
    double columnCount = ViewData["columnCount"] == null ? 1 : (int)ViewData["columnCount"];
    var columnLabelValue = columnCount > 2 ? 1 : 2;
    var columnInputValue = (int)Math.Round(10 / columnCount);
}

@Html.LabelFor(m => m, new { @class = String.Format("col-sm-{0} col-form-label", columnLabelValue) })
@Html.DescriptionFor(m => m)
<div class="col-sm-@columnInputValue">
    <input type="file" name="ModelFile" id="ModelFile" class="form-control" style="border: none;" />
</div>


