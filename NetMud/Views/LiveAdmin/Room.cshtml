@model NetMud.Models.Admin.ViewRoomViewModel
@{
    ViewBag.Breadcrumbs = new Tuple<string, string[], string[]>("View Room", new string[] { "Dashboard", "Rooms" }, new string[] { "/GameAdmin", "/LiveAdmin/Rooms" });
    var longDesc = new NetMud.Communication.Messaging.MessageCluster(Model.DataObject.RenderToLook(null)).Unpack(NetMud.DataStructure.System.TargetEntity.Actor);
}
<h3>@Model.DataObject.TemplateName</h3>
<div>
    @longDesc
</div>
<div id="tabs">
    <ul>
        <li><a href="#tabs-1">Edit</a></li>
        <li><a href="#tabs-2">Map</a></li>
    </ul>
    <div id="tabs-1" data-tabNumber="1">
    </div>
    <div id="tabs-2" data-tabNumber="2">
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        $(document).ready(function () {
            $("#tabs").tabs();
        });
    </script>
}
