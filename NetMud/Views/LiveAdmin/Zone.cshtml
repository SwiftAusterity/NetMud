@model NetMud.Models.Admin.ViewZoneViewModel
@{
    ViewBag.Breadcrumbs = new Tuple<string, string[], string[]>("View Zone", new string[] { "Dashboard", "Zones" }, new string[] { "/GameAdmin", "/LiveAdmin/Zones" });
}

<h3>@Model.DataObject.TemplateName</h3>

<div id="tabs">
    <ul>
        <li><a href="#tabs-1">Edit</a></li>
        <li><a href="#tabs-2">Map</a></li>
    </ul>
    <div id="tabs-1" data-tabNumber="1">
    </div>
    <div id="tabs-2" data-tabNumber="2">
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script type="text/javascript">
        $(document).ready(function () {
            $("#tabs").tabs();
        });
    </script>
}

