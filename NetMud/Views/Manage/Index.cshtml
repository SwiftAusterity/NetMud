@model NetMud.Models.PlayerManagement.ManageAccountViewModel
@{
    Model.UITutorialMode = Model.DataObject.Config.UITutorialMode;
}

<div class="adminDashboard">
    <div>
        <dl class="dl-horizontal">
            <dt>Password:</dt>
            <dd>
                [ @Html.ActionLink("Change your password", "ChangePassword") ]
            </dd>
        </dl>
    </div>
    <div>
        <dl class="dl-horizontal">
            <dt>Registered Characters:</dt>
            <dd>
                @Model.authedUser.GameAccount.Characters.Count() [
                @Html.ActionLink("Manage", "ManageCharacters") ]
            </dd>
            <dt>Notifications and Mail:</dt>
            <dd>
                @Model.authedUser.GameAccount.Config.Notifications.Count() [
                @Html.ActionLink("Manage", "Notifications") ]
            </dd>

            <dt>Acquaintences:</dt>
            <dd>
                @Model.authedUser.GameAccount.Config.Acquaintences.Count() [
                @Html.ActionLink("Manage", "Acquaintences") ]
            </dd>
        </dl>
    </div>
    <div>
        <dl class="dl-horizontal">
            <dt>Background Music Playlists:</dt>
            <dd>
                @Model.authedUser.GameAccount.Config.Playlists.Count() [
                @Html.ActionLink("Manage", "Playlists") ]
            </dd>
            <dt>Client UI Configuration:</dt>
            <dd>
                @Model.UIModuleCount [
                @Html.ActionLink("Manage", "UIModules") ]
            </dd>
        </dl>
    </div>
</div>
<div class="clearfix"></div>

<h3>Account Config</h3>
<section id="accountConfig">
    @using (Html.BeginForm("EditAccountConfig", "Manage", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group row">
            @Html.EditorFor(e => e.UITutorialMode)
            @Html.EditorFor(e => e.GossipSubscriber)
            @Html.EditorFor(e => e.PermanentlyMuteMusic)
            @Html.EditorFor(e => e.PermanentlyMuteSound)
        </div>

        if (User.IsInRole("Admin"))
        {
            @Html.Partial("~/Views/Manage/LogSubscriptions.cshtml", Model)
        }

        @Html.Partial("SubmitButton", new NetMud.Models.SubmitButtonModel() { SubmitName = "Save", ReturnAction = "Index", ReturnController = "Manage", IncludeCancel = false })
    }
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}