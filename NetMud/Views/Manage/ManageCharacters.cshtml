@model NetMud.Models.PlayerManagement.ManageCharactersViewModel
@{
    var tableColumns = new Dictionary<string, Func<dynamic, string>>();
    tableColumns.Add("Name", obj => obj.FullName());
    tableColumns.Add("Race", obj => obj.RaceData.Name);
    tableColumns.Add("Gender", obj => obj.Gender);
    tableColumns.Add("N00b", obj => obj.StillANoob.ToString());
    tableColumns.Add("Permissions", obj => obj.GamePermissionsRank.ToString());
}
@using (Html.BeginForm("RemoveCharacter", "Manage"))
{
    @Html.AntiForgeryToken()
    @Html.Partial("ListTable", new NetMud.Models.ListTableViewModel() { Name = "Registered Characters", Columns = tableColumns, Values = Model.authedUser.GameAccount.Characters })
}
<section id="newCharacterForm">
    @using (Html.BeginForm("AddCharacter", "Manage", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h4>New Character</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group row">
            @Html.EditorFor(e => e.Name, new { columnCount = 3 })
            @Html.EditorFor(e => e.SurName, new { columnCount = 3 })
            @Html.EditorFor(e => e.Gender, new { columnCount = 3 })
        </div>
        <div class="form-group row">
            @Html.DescriptiveLabelFor(m => m.RaceId, new { @class = "col-sm-2 col-form-label" })
            <div class="col-sm-10">
                @Html.DropDownList("RaceId", Model.ValidRaces.Select(rl =>
                                new SelectListItem() { Text = rl.Name, Value = rl.Id.ToString() })
                                 , "Select One", htmlAttributes: new { id = "raceId", Style = "padding: 7px;" })
            </div>
        </div>

        if (User.IsInRole("Admin"))
        {
            <div class="form-group row">
                @Html.DescriptiveLabelFor(m => m.ChosenRole, new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    @Html.DropDownList("ChosenRole", Model.ValidRoles.Select(rl =>
                        new SelectListItem() { Text = rl.ToString(), Value = rl.ToString() })
                        , "Select One", htmlAttributes: new { id = "chosenRole", Style = "padding: 7px;" })
                </div>
            </div>
        }
        @Html.Partial("SubmitButton", new NetMud.Models.SubmitButtonModel() { SubmitName = "Create", CancelName = "Cancel", ReturnAction = "ManageCharacters", ReturnController = "Manage", IncludeCancel = true })
    }
</section>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}