@model NetMud.Models.GameContextModel

@{
    ViewBag.Title = "";
}

<div class="parserClient">
    <div class="parserClientTop">
        <div id="locationBreadcrumbs">
            <span output-data-source="Local.ZoneName"></span> > <span output-data-source="Local.LocaleName"></span> > <span output-data-source="Local.RoomName"></span>
        </div>
    </div>
    <div class="parserClientLeft">
        <div id="quadrentOne" class="sideBar">
            <span output-data-source="Environment"></span>
        </div>
        <div id="quadrentTwo" class="sideBar">
            <span>Exits: </span><span output-data-source="Local.Exits"></span>
            <span>Populace: </span><span output-data-source="Local.Populace"></span>
            <span>Inventory: </span><span output-data-source="Local.Inventory"></span>
        </div>
    </div>
    <div class="parserClientRight">
        <div id="quadrentThree" class="sideBar">
            <span output-data-source="Self"></span>
        </div>
        <div id="quadrentFour" class="sideBar">
            <span output-data-source="Extended"></span>
        </div>
    </div>
    <div class="textParserClient">
        <div id="OutputArea" class="parserOutput"></div>
        <input type="text" id="input" name="input" class="parserInput" />
    </div>
    <a href="./GameClient" id="clientReload">Reload Client</a>
</div>

@Styles.Render("~/Content/GameClient.css")
@Scripts.Render("~/Scripts/WebSocketsClient.js")
@Styles.Render("http://fonts.googleapis.com/css?family=Berkshire+Swash")
