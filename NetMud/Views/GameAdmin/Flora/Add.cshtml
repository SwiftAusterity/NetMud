@model NetMud.Models.Admin.AddEditFloraViewModel
@{
    ViewBag.Title = "Add New Flora";

    <section id="newCharacterForm">
        @using (Html.BeginForm("Add", "Flora", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group row">
                @Html.EditorFor(e => e.Name)
                @Html.EditorFor(e => e.SunlightPreference)
                @Html.EditorFor(e => e.Coniferous)
            </div>
            <div class="form-group row">
                @Html.EditorFor(e => e.Rarity)
                @Html.EditorFor(e => e.AmountMultiplier)
                @Html.EditorFor(e => e.PuissanceVariance)
            </div>
            <div class="form-group row">
                @Html.EditorFor(m => m.TemperatureRangeLow)
                @Html.EditorFor(m => m.TemperatureRangeHigh)
            </div>
            <div class="form-group row">
                @Html.EditorFor(m => m.HumidityRangeLow)
                @Html.EditorFor(m => m.HumidityRangeHigh)
            </div>
            <div class="form-group row">
                @Html.EditorFor(m => m.ElevationRangeLow)
                @Html.EditorFor(m => m.ElevationRangeHigh)
            </div>
            <div class="form-group row">
                @Html.Partial("BackingDataDropdown", new NetMud.Models.Admin.ReferenceDataDropdownModel("Wood", "Wood", Model.ValidMaterials, -1))
                @Html.Partial("BackingDataDropdown", new NetMud.Models.Admin.ReferenceDataDropdownModel("Leaf", "Leaf", Model.ValidInanimateDatas, -1))
                @Html.Partial("BackingDataDropdown", new NetMud.Models.Admin.ReferenceDataDropdownModel("Flower", "Flower", Model.ValidInanimateDatas, -1))
            </div>
            <div class="form-group row">
                @Html.Partial("BackingDataDropdown", new NetMud.Models.Admin.ReferenceDataDropdownModel("Fruit", "Fruit", Model.ValidInanimateDatas, -1))
                @Html.Partial("BackingDataDropdown", new NetMud.Models.Admin.ReferenceDataDropdownModel("Seed", "Seed", Model.ValidInanimateDatas, -1))
            </div>

            @Html.Partial("~/Views/GameAdmin/Flora/OccursIn.cshtml", Model)

            <div class="form-group row">
                @Html.EditorFor(e => e.HelpText)
            </div>
            @Html.Partial("SubmitButton", "Create")

        }
    </section>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}