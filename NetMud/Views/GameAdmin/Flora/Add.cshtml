@model NetMud.Models.Admin.AddEditFloraViewModel

<section id="newCharacterForm">
    @using (Html.BeginForm("Add", "Flora", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group row">
            @Html.EditorFor(e => e.Name, new { columnCount = 3 })
            @Html.EditorFor(e => e.SunlightPreference, new { columnCount = 3 })
            @Html.EditorFor(e => e.Coniferous, new { columnCount = 3 })
        </div>
        <div class="form-group row">
            @Html.EditorFor(e => e.Rarity, new { columnCount = 3 })
            @Html.EditorFor(e => e.AmountMultiplier, new { columnCount = 3 })
            @Html.EditorFor(e => e.PuissanceVariance, new { columnCount = 3 })
        </div>
        <div class="form-group row">
            @Html.EditorFor(m => m.TemperatureRangeLow, new { columnCount = 3 })
            @Html.EditorFor(m => m.TemperatureRangeHigh, new { columnCount = 3 })
        </div>
        <div class="form-group row">
            @Html.EditorFor(m => m.HumidityRangeLow, new { columnCount = 3 })
            @Html.EditorFor(m => m.HumidityRangeHigh, new { columnCount = 3 })
        </div>
        <div class="form-group row">
            @Html.EditorFor(m => m.ElevationRangeLow, new { columnCount = 3 })
            @Html.EditorFor(m => m.ElevationRangeHigh, new { columnCount = 3 })
        </div>
        <div class="form-group row">
            @Html.Partial("BackingDataDropdown", new NetMud.Models.Admin.ReferenceDataDropdownModel("Wood", "Wood", Model.ValidMaterials, -1))
            @Html.Partial("BackingDataDropdown", new NetMud.Models.Admin.ReferenceDataDropdownModel("Leaf", "Leaf", Model.ValidInanimateTemplates, -1))
            @Html.Partial("BackingDataDropdown", new NetMud.Models.Admin.ReferenceDataDropdownModel("Flower", "Flower", Model.ValidInanimateTemplates, -1))
        </div>
        <div class="form-group row">
            @Html.Partial("BackingDataDropdown", new NetMud.Models.Admin.ReferenceDataDropdownModel("Fruit", "Fruit", Model.ValidInanimateTemplates, -1))
            @Html.Partial("BackingDataDropdown", new NetMud.Models.Admin.ReferenceDataDropdownModel("Seed", "Seed", Model.ValidInanimateTemplates, -1))
        </div>

        @Html.Partial("~/Views/GameAdmin/Flora/OccursIn.cshtml", Model)

        <div class="form-group row">
            @Html.EditorFor(e => e.HelpText)
        </div>
        @Html.Partial("SubmitButton", new NetMud.Models.SubmitButtonModel() { SubmitName = "Create", CancelName = "Cancel", ReturnAction = "Index", ReturnController = "Flora", IncludeCancel = true })
    }
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}