@using NetMud.DataStructure.Base.Supporting

@model NetMud.Models.Admin.AddEditFloraViewModel
@{
    ViewBag.Title = "Edit Flora";

    <section id="newCharacterForm">
        @using (Html.BeginForm("Edit", "Flora", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <input type="hidden" name="id" id="id" value="@Model.DataObject.ID" />
            <div class="form-group three-column">
                @Html.EditorFor(e => e.Name)
                @Html.EditorFor(e => e.SunlightPreference)
                @Html.EditorFor(e => e.Coniferous)
            </div>
            <div class="form-group three-column">
                @Html.EditorFor(e => e.Rarity)
                @Html.EditorFor(e => e.AmountMultiplier)
                @Html.EditorFor(e => e.PuissanceVariance)
            </div>
            <div class="form-group two-column">
                @Html.EditorFor(m => m.TemperatureRangeLow)
                @Html.EditorFor(m => m.TemperatureRangeHigh)
            </div>
            <div class="form-group two-column">
                @Html.EditorFor(m => m.HumidityRangeLow)
                @Html.EditorFor(m => m.HumidityRangeHigh)
            </div>
            <div class="form-group two-column">
                @Html.EditorFor(m => m.ElevationRangeLow)
                @Html.EditorFor(m => m.ElevationRangeHigh)
            </div>
            <div class="form-group three-column">
                @Html.Partial("BackingDataDropdown", new NetMud.Models.Admin.ReferenceDataDropdownModel("Wood", "Wood", Model.ValidMaterials, Model.Wood))
                @Html.Partial("BackingDataDropdown", new NetMud.Models.Admin.ReferenceDataDropdownModel("Leaf", "Leaf", Model.ValidInanimateDatas, Model.Leaf))
                @Html.Partial("BackingDataDropdown", new NetMud.Models.Admin.ReferenceDataDropdownModel("Flower", "Flower", Model.ValidInanimateDatas, Model.Flower))
            </div>
            <div class="form-group two-column">
                @Html.Partial("BackingDataDropdown", new NetMud.Models.Admin.ReferenceDataDropdownModel("Fruit", "Fruit", Model.ValidInanimateDatas, Model.Fruit))
                @Html.Partial("BackingDataDropdown", new NetMud.Models.Admin.ReferenceDataDropdownModel("Seed", "Seed", Model.ValidInanimateDatas, Model.Seed))
            </div>
            
            @Html.Partial("~/Views/GameAdmin/Flora/OccursIn.cshtml", Model)

            <div class="form-group one-column">
                @Html.EditorFor(e => e.HelpText)
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-9">
                    <input type="submit" value="Commit" class="btn btn-default save" />
                    @Html.ActionLink("Cancel", "Index", "Flora", new { @class = "btn btn-default cancel" })
                </div>
            </div>
        }
    </section>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}