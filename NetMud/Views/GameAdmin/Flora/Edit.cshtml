@model NetMud.Models.Admin.AddEditFloraViewModel

<section id="newCharacterForm">
    @using (Html.BeginForm("Edit", "Flora", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <input type="hidden" name="id" id="id" value="@Model.DataObject.Id" />
        <div class="form-group row">
            @Html.EditorFor(m => m.Name, new { columnCount = 3 })
            @Html.EditorFor(m => m.SunlightPreference, new { columnCount = 3 })
            @Html.EditorFor(m => m.Coniferous, new { columnCount = 3 })
        </div>
        <div class="form-group row">
            @Html.EditorFor(m => m.Rarity, new { columnCount = 3 })
            @Html.EditorFor(m => m.AmountMultiplier, new { columnCount = 3 })
            @Html.EditorFor(m => m.PuissanceVariance, new { columnCount = 3 })
        </div>
        <div class="form-group row">
            @Html.EditorFor(m => m.TemperatureRangeLow, new { columnCount = 3 })
            @Html.EditorFor(m => m.TemperatureRangeHigh, new { columnCount = 3 })
        </div>
        <div class="form-group row">
            @Html.EditorFor(m => m.HumidityRangeLow, new { columnCount = 3 })
            @Html.EditorFor(m => m.HumidityRangeHigh, new { columnCount = 3 })
        </div>
        <div class="form-group row">
            @Html.EditorFor(m => m.ElevationRangeLow, new { columnCount = 3 })
            @Html.EditorFor(m => m.ElevationRangeHigh, new { columnCount = 3 })
        </div>
        <div class="form-group row">
            @Html.Partial("BackingDataDropdown", new NetMud.Models.Admin.ReferenceDataDropdownModel("Wood", "Wood", Model.ValidMaterials, Model.Wood))
            @Html.Partial("BackingDataDropdown", new NetMud.Models.Admin.ReferenceDataDropdownModel("Leaf", "Leaf", Model.ValidInanimateTemplates, Model.Leaf))
            @Html.Partial("BackingDataDropdown", new NetMud.Models.Admin.ReferenceDataDropdownModel("Flower", "Flower", Model.ValidInanimateTemplates, Model.Flower))
        </div>
        <div class="form-group row">
            @Html.Partial("BackingDataDropdown", new NetMud.Models.Admin.ReferenceDataDropdownModel("Fruit", "Fruit", Model.ValidInanimateTemplates, Model.Fruit))
            @Html.Partial("BackingDataDropdown", new NetMud.Models.Admin.ReferenceDataDropdownModel("Seed", "Seed", Model.ValidInanimateTemplates, Model.Seed))
        </div>

        @Html.Partial("~/Views/GameAdmin/Flora/OccursIn.cshtml", Model)

        <div class="form-group row">
            @Html.EditorFor(m => m.HelpText)
        </div>

        @Html.Partial("SubmitButton", new NetMud.Models.SubmitButtonModel() { SubmitName = "Save", CancelName = "Cancel", ReturnAction = "Index", ReturnController = "Flora", IncludeCancel = true })
    }
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}