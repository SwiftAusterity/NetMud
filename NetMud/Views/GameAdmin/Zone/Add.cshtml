@using NetMud.DataStructure.Zone

@model NetMud.Models.Admin.AddEditZoneTemplateViewModel

<section id="newCharacterForm">
    @using (Html.BeginForm("Add", "Zone", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group row">
            @Html.EditorFor(e => e.Name)

            @Html.DescriptiveLabelFor(m => m.Hemisphere, new { @class = "col-sm-1 col-form-label" })
            <div class="col-md-3">
                @Html.DropDownList("Hemisphere", Enum.GetNames(typeof(HemispherePlacement)).Select(rl =>
                                                                                new SelectListItem() { Text = rl, Value = ((short)Enum.Parse(typeof(HemispherePlacement), rl)).ToString() })
                                                                                , "Select One", htmlAttributes: new { id = "Hemisphere", @class = "form-control" })
            </div>

            @Html.Partial("BackingDataDropdown", new NetMud.Models.Admin.ReferenceDataDropdownModel("World", "World", Model.ValidWorlds, -1))
        </div>
        <div class="form-group row">
            @Html.EditorFor(e => e.TemperatureCoefficient, new { columnCount = 2 })
            @Html.EditorFor(e => e.PressureCoefficient, new { columnCount = 2 })
        </div>
        <div class="form-group row">
            @Html.EditorFor(e => e.BaseElevation, new { columnCount = 2 })
            @Html.EditorFor(e => e.Claimable, new { columnCount = 2 })
        </div>
        @Html.Partial("SubmitButton", new NetMud.Models.SubmitButtonModel() { SubmitName = "Create", CancelName = "Cancel", ReturnAction = "Index", ReturnController = "Zone", IncludeCancel = true })
    }
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}