@model NetMud.Models.Admin.AddEditZoneDataViewModel

<section id="newCharacterForm">
    @using (Html.BeginForm("Add", "Zone", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group row">
            @Html.EditorFor(e => e.Name, new { columnCount = 1 })
        </div>
        <div class="form-group row">
            @Html.EditorFor(e => e.TemperatureCoefficient, new { columnCount = 2 })
            @Html.EditorFor(e => e.PressureCoefficient, new { columnCount = 2 })
        </div>
        <div class="form-group row">
            @Html.EditorFor(e => e.BaseElevation, new { columnCount = 2 })
            @Html.EditorFor(e => e.Claimable, new { columnCount = 2 })
        </div>
        @Html.Partial("SubmitButton", new NetMud.Models.SubmitButtonModel() { SubmitName = "Create", CancelName = "Cancel", ReturnAction = "Index", ReturnController = "Zone", IncludeCancel = true })
    }
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}