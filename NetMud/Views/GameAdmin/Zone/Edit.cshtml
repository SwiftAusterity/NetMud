@using NetMud.DataStructure.Zone

@model NetMud.Models.Admin.AddEditZoneTemplateViewModel

<section id="editZoneForm">
    @using (Html.BeginForm("Edit", "Zone", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <input type="hidden" name="id" id="id" value="@Model.DataObject.Id" />
        <div class="form-group row">
            @Html.EditorFor(m => m.Name)

            @Html.DescriptiveLabelFor(m => m.Hemisphere, new { @class = "col-sm-1 col-form-label" })
            <div class="col-md-3">
                @Html.DropDownList("Hemisphere", Enum.GetNames(typeof(HemispherePlacement)).Select(rl =>
                                                                                new SelectListItem() { Text = rl, Value = ((short)Enum.Parse(typeof(HemispherePlacement), rl)).ToString(), Selected = rl.Equals(Enum.GetName(typeof(HemispherePlacement), Model.Hemisphere)) })
                                                                                , "Select One", htmlAttributes: new { id = "Hemisphere", @class = "form-control" })
            </div>

            @Html.Partial("BackingDataDropdown", new NetMud.Models.Admin.ReferenceDataDropdownModel("World", "World", Model.ValidWorlds, Model.World))
        </div>
        <div class="form-group row">
            @Html.EditorFor(m => m.TemperatureCoefficient)
            @Html.EditorFor(m => m.PressureCoefficient)
        </div>
        <div class="form-group row">
            @Html.EditorFor(m => m.BaseElevation)
            @Html.EditorFor(m => m.Claimable)
        </div>

        @Html.Partial("SubmitButton", new NetMud.Models.SubmitButtonModel() { SubmitName = "Save", CancelName = "Cancel", ReturnAction = "Index", ReturnController = "Zone", IncludeCancel = true })
    }
</section>
<div class="clearfix"></div>
<div style="padding-top: 5px;">
    @Html.Partial("~/Views/GameAdmin/Zone/OccurrenceList.cshtml", Model.DataObject)
</div>
<div class="clearfix"></div>
<div style="padding-top: 5px;">
    @Html.Partial("~/Views/GameAdmin/Zone/LocaleList.cshtml", Model)
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}