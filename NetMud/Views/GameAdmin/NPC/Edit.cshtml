@model NetMud.Models.Admin.AddEditNPCDataViewModel
@{
    ViewBag.Title = "Edit Non-player Character";
}

<section id="newNPCForm">
    @using (Html.BeginForm("Edit", "NPC", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <input type="hidden" name="id" id="id" value="@Model.DataObject.Id" />
        <div class="form-group row">
            @Html.EditorFor(e => e.Name, new { columnCount = 3 })
            @Html.EditorFor(e => e.SurName, new { columnCount = 3 })
        </div>
        <div class="form-group row">
            @Html.EditorFor(e => e.Gender, new { columnCount = 3 })
            @Html.DescriptiveLabelFor(m => m.RaceId, new { @class = "col-sm-1 col-form-label" })
            <div class="col-md-4">
                @Html.DropDownList("RaceId", Model.ValidRaces.Select(rl =>
                                                new SelectListItem() { Text = rl.Name, Value = rl.Id.ToString(), Selected = rl.Id.Equals(Model.RaceId) })
                                                 , "Select One", htmlAttributes: new { id = "raceId", @class="form-control" })
            </div>
        </div>
        @Html.Partial("SubmitButton", new NetMud.Models.SubmitButtonModel() { SubmitName = "Save", CancelName = "Cancel", ReturnAction = "Index", ReturnController = "NPC", IncludeCancel = true })
    }
</section>

@Html.Partial("~/Views/GameAdmin/NPC/OccurrenceList.cshtml", Model.DataObject)

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}