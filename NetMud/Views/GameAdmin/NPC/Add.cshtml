@model NetMud.Models.Admin.AddEditNPCDataViewModel

@{
    ViewBag.Breadcrumbs = new Tuple<string, string[], string[]>("New NPC", new string[] { "Dashboard", "NPCs" }, new string[] { "/GameAdmin", "/NPC" });
}

<section id="templateApply">
    @using (Html.BeginForm("Add", "NPC", FormMethod.Get, new { @class = "form-horizontal", role = "form", @name = "applyTemplateForm", @id = "applyTemplateForm" }))
    {
        <div class="form-group row">
            @Html.EditorFor(m => m.Template, new { validItems = Model.ValidTemplateBases, selectedItem = -1, forceOptional = "true" })
            <input type="submit" value="Apply" class="btn btn-default save" , style="margin-left: 25px;" />
        </div>
    }
</section>

<section id="addNPCForm">
    @using (Html.BeginForm("Add", "NPC", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.EditorFor(e => e.DataObject, new { validItems = Model.ValidInanimateDatas })

        @Html.Partial("SubmitButton", new NetMud.Models.SubmitButtonModel() { SubmitName = "Create", CancelName = "Cancel", ReturnAction = "Index", ReturnController = "NPC", IncludeCancel = true })
    }
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
