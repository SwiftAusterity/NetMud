        @Html.Partial("~/Views/GameAdmin/DimensionalModel/ModelPlane.cshtml", Model)
        @Html.Partial("~/Views/GameAdmin/DimensionalModel/ModelPlane.cshtml", Model)
        @Html.Partial("~/Views/GameAdmin/DimensionalModel/ModelPlane.cshtml", Model)
        @Html.Partial("~/Views/GameAdmin/DimensionalModel/ModelPlane.cshtml", Model)
        @Html.Partial("~/Views/GameAdmin/DimensionalModel/ModelPlane.cshtml", Model)
        @Html.Partial("~/Views/GameAdmin/DimensionalModel/ModelPlane.cshtml", Model)
        <div class="clearfix"></div>

        @Html.Partial("SubmitButton", new NetMud.Models.SubmitButtonModel() { SubmitName = "Create", CancelName = "Cancel", ReturnAction = "Index", ReturnController = "DimensionalModel", IncludeCancel = true })
    }
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}