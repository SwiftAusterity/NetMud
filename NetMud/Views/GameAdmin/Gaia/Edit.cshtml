@model NetMud.Models.Admin.AddEditGaiaViewModel

@{
    ViewBag.Breadcrumbs = new Tuple<string, string[], string[]>("Edit World - " + Model.DataObject.Name, new string[] { "Dashboard", "Gaia" }, new string[] { "/GameAdmin", "/Gaia" });
}

<section id="editWorldForm">
    @using (Html.BeginForm("Edit", "Gaia", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <input type="hidden" name="id" id="id" value="@Model.DataObject.Id" />

        @Html.EditorFor(e => e.DataObject, new { ValidCelestials = Model.ValidCelestials })

        @Html.Partial("SubmitButton", new NetMud.Models.SubmitButtonModel() { SubmitName = "Save", CancelName = "Cancel", ReturnAction = "Index", ReturnController = "Gaia", IncludeCancel = true })
    }
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

}