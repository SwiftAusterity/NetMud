@model NetMud.Models.ResetPasswordViewModel

@using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Reset your password.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Code)
    <div class="form-group row">
        @Html.EditorFor(e => e.Email)
    </div>
    <div class="form-group row">
        @Html.EditorFor(e => e.Password)
        @Html.EditorFor(e => e.ConfirmPassword)
    </div>
    @Html.Partial("SubmitButton", new NetMud.Models.SubmitButtonModel() { SubmitName = "Reset", CancelName = "Cancel", ReturnAction = "Login", ReturnController = "Account", IncludeCancel = false })
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
